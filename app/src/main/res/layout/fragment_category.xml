<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.category.CategoryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_discovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Category"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_food"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:background="@drawable/custom_button_box"
                android:drawableTop="@drawable/ic_round_fastfood_24"
                android:padding="8dp"
                android:text="Food"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_vaccine"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/custom_button_box"
                android:drawableTop="@drawable/ic_round_fastfood_24"
                android:padding="8dp"
                android:text="Vaccine"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_shower"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/btn_add_vaccine"
                android:background="@drawable/custom_button_box"
                android:drawableTop="@drawable/ic_round_fastfood_24"
                android:padding="8dp"
                android:text="Shower"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_first"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_medicine"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:background="@drawable/custom_button_box"
                android:drawableTop="@drawable/ic_round_fastfood_24"
                android:padding="8dp"
                android:text="Medicine"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_grooming"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/custom_button_box"
                android:drawableTop="@drawable/ic_round_fastfood_24"
                android:padding="8dp"
                android:text="Grooming"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_other"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/custom_button_box"
                android:drawableTop="@drawable/ic_round_fastfood_24"
                android:padding="8dp"
                android:text="Other"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>